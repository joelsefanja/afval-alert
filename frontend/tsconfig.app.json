/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@environments/*": ["environments/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/app/shared/*"],
      "@models/*": ["src/app/models/*"],
      "@models": ["src/app/models"],
      "@services/*": ["src/app/app-users/features/afval-melden/services/*"],
      "@components/*": ["src/app/app-users/features/afval-melden/components/*"],
      "@interfaces/*": ["src/app/app-users/features/afval-melden/interfaces/*"],
      "@tokens/*": ["src/app/app-users/features/afval-melden/tokens/*"],
      "@documentatie/*": ["documentatie/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "environments/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}